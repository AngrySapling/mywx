/* pages/collect/collect.wxss */
#collect .goods{
  padding: 18rpx 30rpx;
  margin-bottom: 25rpx;
  overflow: hidden;
  position: relative;
}
#collect .goods image{
  height: 240rpx;
  width: 240rpx;
  float: left;
}
#collect .goods .title{
  float: left;
  padding: 10rpx 20rpx;
}
#collect .goods .title .text{
  min-height: 72rpx;
  line-height: 36rpx;
  font-size: 24rpx;
}
#collect .goods .title .price{
  height: 96rpx;
  line-height: 96rpx;
  color: #ff7500;
}
#collect .goods .title .goshop{
  height: 52rpx;
  line-height: 52rpx;
  font-size: 18rpx;
  color: #8f8f8f;
}
#collect .goods .addshop{
  height: 55rpx;
  width: 155rpx;
  position: absolute;
  bottom: 44rpx;
  right: 28rpx;
  line-height: 55rpx;
  color: #fff;
  background: #ff7500;
  border-radius: 27rpx;
  font-size: 24rpx;
  text-align: center;
}
.van-search{
  background: #fff !important;
}