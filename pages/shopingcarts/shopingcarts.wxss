
.btn{
  width: 100%;
  position: fixed;
  background: #fff;
  height: 80rpx;
  border-top: 1px solid #ccc;
  line-height: 80rpx;
  bottom: 0;
  left:0;
}
.btn text{
  display: inline-block;
}


/* 加入购物车的商品 */
#shopingcarts .shops{
  position: relative;
  z-index: 1000;
}
#shopingcarts .shops .img,#shopingcarts .shops .shopsMsg{
  float: left;
}
#shopingcarts .shops .shoplist{
  overflow:hidden;
  position: relative;
  background: #fff;
}
#shopingcarts .shops .shoplist:last-child{
  border-bottom: none;
}
#shopingcarts .shops .img{
  height: 180rpx;
  width: 180rpx;
}
#shopingcarts .shops .img image{
  height: 100%;
  width: 100%;
}
#shopingcarts .shops .shopsMsg{
  padding:0 10rpx;
  width:470rpx;
}
#shopingcarts .shops .shopsMsg .content{
  height: 120rpx;
  width:100%;
  font-size:24rpx;
}
#shopingcarts .shops .shopsMsg .content text{
  line-height:60rpx; 
}
#shopingcarts .price_left{
  float:left;
}
#shopingcarts .shops .shopsMsg .price{
  font-size:24rpx;
  height: 60rpx;
  line-height: 60rpx;
}
#shopingcarts .price_right{
  float:right;
  overflow:hidden;
}
#shopingcarts .price_right .input{
  float: left;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
  height: 56rpx;
  width: 70rpx;
  text-align: center;
  line-height: 56rpx;
}
#shopingcarts .price_right .add,
#shopingcarts .price_right .reduce{
  float: left;
  border:1px solid #ccc;
  height: 56rpx;
  width: 56rpx;
  text-align: center;
  line-height: 56rpx;
}
#shopingcarts .price_right .input{
  font-size: 28rpx;
}
.isactive1,.isactive2{
  border: 1px solid red !important;
  color: red;
}
.check{
  height:40rpx;
  width:40rpx;
  position:absolute;
  top:50%;
  left:50%;
  margin:-20rpx 0 0 -20rpx;
  border:1px solid #ddd;
  border-radius: 50%;
  overflow:hidden;
}
.check image{
  height: 100%;
  width:100%;
}
.i-swipeout-demo-button{
  height:220rpx;
  line-height:220rpx;
  text-align: center;
  font-size: 14px;
  background: red;
  color: #fff;
}
.allcheck{
  float: left;
}
.btn .pay_money{
  width:70%;
  position: relative;
  font-size: 32rpx;
  float: left;
}
.btnIndent {
  width:30%;
  text-align:center;
  float:right;
  background:red;
  color:#fff;
}
.allcheck,.allprice{
  float:left;
  height: 80rpx;
  position: relative;
}
.allprice{
  float: right !important;
  padding: 0 20rpx;
}
.allcheck .img{
  width:40rpx;
  height:40rpx;
  position: absolute;
  left: 20rpx;
  top:50%;
  margin-top:-20rpx;
  border: 1px solid #ddd;
  border-radius: 50%;
}
.allcheck .img image{
  height: 100%;
  width: 100%;
  vertical-align:top;
}
.allcheck .all{
  padding-left:80rpx;
}
.carts_top{
  width: 100%;
  height: 80rpx;
  background: #eee;
  line-height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2000;
}
.carts_top view{
  font-size: 30rpx;
}
#shopingcarts .edit{
  float:right;
  padding-right:20rpx;
  color:#999;
}
.van-swipe-cell__right{
  width: 64px;
  text-align: center;
  line-height: 100%;
  border-bottom:1px solid #ccc;
}
.right{
  line-height:224rpx;
  height:224rpx;
  font-size: 30rpx;
  background:red;
  color:#fff;
  text-align: center;
  width: 100rpx;
}
.nonegoods{
  background: #f5f5f9;
  height: 100vh;
  overflow: hidden;
}
.nonegoods image{
   width: 305rpx;
   height: 331rpx;
   margin:100rpx auto 20rpx;
  display: block;
}
.nonegoods .none_text{
  color: #a6a6a9;
  text-align: center;
  height: 102rpx;
  line-height: 102rpx;
  font-size: 30rpx;
}
.nonegoods .go_shop{
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #75be0d;
  border-radius: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #75be0d;
  margin: 120rpx auto 0;
}